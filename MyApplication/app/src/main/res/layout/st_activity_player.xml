<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.ckt.testauxiliarytool.sensortest.activities.PlayerActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|center"
        android:layout_marginEnd="11dp"
        android:layout_toEndOf="@+id/start_button"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/theFirstImagine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <VideoView
        android:id="@+id/Video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/end_button" />

    <Button
        android:id="@+id/end_button"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="@string/end_text" />

    <TextView
        android:id="@+id/messege"
        style="@style/TextViewStyle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Video"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/start_button"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="@string/start_text" />
</RelativeLayout>