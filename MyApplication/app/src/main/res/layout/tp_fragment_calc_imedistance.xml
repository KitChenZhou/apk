<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ckt.testauxiliarytool.tp.fragments.CalcIMEDistanceFragment">

    <com.ckt.testauxiliarytool.tp.views.DistanceTouchView
        android:id="@+id/id_dtv_ime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        yu:touch_enable="false" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:cursorVisible="true"
        android:hint="@string/test_imput_ime"
        android:textCursorDrawable="@drawable/tp_ime_cursor" />


    <RelativeLayout
        android:id="@+id/id_ime_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/tp_bg_keyboard_selector"
            android:keyPreviewLayout="@layout/tp_key_preview_layout"
            android:keyTextColor="@color/keyTextColor"
            android:splitMotionEvents="true"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>
